<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/trollno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"

        android:text="rollno" />

    <TextView
        android:id="@+id/tsname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/trollno"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/trollno"
        android:text="sname"
        android:textColor="#000000"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/tsname" />

    <TextView
        android:id="@+id/tfname"
        android:layout_width="wrap_content"
        android:textColor="#313030"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/trollno"
        android:layout_below="@+id/status"
        android:text="fname" />
</RelativeLayout>